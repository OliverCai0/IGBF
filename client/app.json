{
  "expo": {
    "name": "IGBF",
    "slug": "IGBF",
    "version": "1.0.2",
    "orientation": "portrait",
    "icon": "./assets/IGBF-icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/IGBF-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.oliver0.IGBF",
      "buildNumber" : "3",
      "infoPlist": {
        "NSCameraUsageDescription": "Allow access to the camera to take pictures.",
        "NSPhotoLibraryUsageDescription" : "Allow access to pictures from your image library to overlay them ontop of the camera.",
        "NSPhotoLibraryAddUsageDescription" : "Allow access to store your taken pictures in your library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/IGBF-icon.png",
        "backgroundColor": "#FFFFFF"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
